<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/roomCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/roomStyle"
            android:layout_marginTop="10dp"
            android:minWidth="150dp"
            android:minHeight="150dp"
            android:id="@+id/roomImage"/>

        <TextView
            android:id="@+id/roomStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Style"
            android:textSize="24sp"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="normal|bold" />

        <TextView
            android:text="US$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/roomPrice"
            android:layout_alignBaseline="@+id/roomPrice"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold" />

        <TextView
            android:text="5000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView2"
            android:id="@+id/roomPrice"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roomPrice"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@+id/textView2"
            android:text="Total Price:"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp" />

        <TextView
            android:text="US$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/totalPrice"
            android:layout_alignBaseline="@+id/totalPrice"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="normal|bold" />

        <TextView
            android:text="5000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView3"
            android:id="@+id/totalPrice"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/bookingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/totalPrice"
            android:layout_marginTop="10dp"
            android:text="Book"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorBtn"
            android:textColor="@color/colorText" />

        <TextView
            android:text="Price Per Night: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@color/colorPrimary"
            android:layout_alignTop="@+id/roomImage"
            android:layout_toEndOf="@+id/roomImage"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>